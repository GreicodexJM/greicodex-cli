version: '3.8'

services:
  postgres:
    image: postgres:15-alpine
    environment:
      POSTGRES_DB: {{ .Project.Name | ToLower }}_db
      POSTGRES_USER: {{ .Project.Name | ToLower }}_user
      POSTGRES_PASSWORD: {{ .Project.Name | ToLower }}_password
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data

volumes:
  postgres_data:

version: '3.8'

services:
  app:
    build:
      context: .
      target: build
    volumes:
      - .:/app
    working_dir: /app
    ports:
      - "4200:4200"

  debug:
    build:
      context: .
      target: build
    ports:
      - "9229:9229"
    volumes:
      - .:/app
    working_dir: /app
    command: ["npm", "run", "start", "--", "--host", "0.0.0.0", "--disable-host-check"]
